<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <RelativeLayout
        android:id="@+id/encabezado"
        android:layout_width="270dp"
        android:layout_height="440dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp">

        <RelativeLayout
            android:id="@+id/ciudadanosl"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignStart="@id/encabezado"
            android:background="@drawable/border"
            tools:ignore="NotSibling">

            <ImageView
                android:id="@+id/ciudadanos"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ciudadanos"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/ciudadanos" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/urbanal"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/border">
            <ImageView
                android:id="@+id/urbana"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/urbana"

                android:layout_marginTop="5dp"
                android:text="@string/urbana"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/infraestructural"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@id/ciudadanosl"
            android:layout_alignParentStart="true"
            android:background="@drawable/border"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/infraestructura"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/infraestructura"
                android:text="@string/infraestructura"
                android:layout_centerHorizontal="true"

                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/perdidasl"
            tools:ignore="NotSibling"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/urbanal"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"

            >

            <ImageView
                android:id="@+id/perdidas"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/perdidas"
                android:layout_centerHorizontal="true"
                android:text="@string/perdidas" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/denunciasl"
            android:layout_alignParentStart="true"
            android:layout_below="@id/infraestructural"
            android:layout_marginTop="10dp"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/denuncias"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/denuncias"
                android:text="@string/denuncias"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/edificiosl"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@id/perdidasl"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/edificis"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
               />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edificios"
                android:layout_below="@id/edificis"
                android:layout_centerHorizontal="true"/>





        </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>

